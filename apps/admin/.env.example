# =======================================
# Admin Dashboard Environment Variables
# =======================================
# Copy to .env.local and fill with actual values
# NEVER commit .env.local to version control

# =======================================
# IMPORTANT: Next.js Public Variables
# =======================================
# Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# Only use for non-sensitive configuration that clients need
# These are embedded at build time, not runtime

# =======================================
# API Configuration (Public)
# =======================================
# Development API
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000
# Production API (EU Region: Railway Frankfurt/Amsterdam)
# NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.eu

# =======================================
# Supabase Configuration (Public) - PHASE 1
# =======================================
# Get from: https://app.supabase.com/project/[project-ref]/settings/api
# EU Region: Frankfurt (eu-central-1) deployment
NEXT_PUBLIC_SUPABASE_URL=https://xxxxxxxxxxxxxxxxxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxxxxxxxx

# =======================================
# Auth Configuration (PHASE 1)
# =======================================
# Magic link redirect configuration
NEXT_PUBLIC_AUTH_REDIRECT_URL=http://localhost:3001/auth/callback
# Production: NEXT_PUBLIC_AUTH_REDIRECT_URL=https://admin.yourdomain.eu/auth/callback
# Session storage method
NEXT_PUBLIC_AUTH_STORAGE=localStorage
# Magic link expiry time in seconds
NEXT_PUBLIC_AUTH_OTP_EXPIRY=3600

# =======================================
# Application Configuration (Public)
# =======================================
NEXT_PUBLIC_APP_NAME="Admin Dashboard"
NEXT_PUBLIC_APP_VERSION=0.0.1
# EU Region: Vercel deployment in Frankfurt
NEXT_PUBLIC_APP_URL=http://localhost:3001
# NEXT_PUBLIC_APP_URL=https://admin.yourdomain.eu

# =======================================
# Feature Flags (Public)
# =======================================
# Enable/disable features at build time
NEXT_PUBLIC_FEATURE_PRICING_EDITOR=true
NEXT_PUBLIC_FEATURE_USER_MANAGEMENT=true
NEXT_PUBLIC_FEATURE_ANALYTICS_DASHBOARD=true
NEXT_PUBLIC_FEATURE_BULK_OPERATIONS=false
NEXT_PUBLIC_FEATURE_ADVANCED_SEARCH=false
NEXT_PUBLIC_FEATURE_EXPORT_DATA=true

# =======================================
# Third-Party Services (Public)
# =======================================
# Only non-sensitive identifiers, not secret keys!
# Posthog Analytics (EU Region)
# NEXT_PUBLIC_POSTHOG_KEY=phc_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
# NEXT_PUBLIC_POSTHOG_HOST=https://eu.posthog.com

# Sentry Error Tracking (EU Region)
# NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxx@oEU.ingest.sentry.io/xxxxxxxxx
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# =======================================
# UI/UX Configuration (Public)
# =======================================
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,de,fr,es

# =======================================
# Development Tools (Public)
# =======================================
NEXT_PUBLIC_ENABLE_DEBUG_PANEL=true
NEXT_PUBLIC_SHOW_API_RESPONSES=true
NEXT_PUBLIC_MOCK_API_DELAY_MS=0

# =======================================
# Important Security Note
# =======================================
# The admin app no longer uses any server-side only variables
# All server operations (database access, service role operations, etc.)
# are handled by the API backend at NEXT_PUBLIC_API_BASE_URL
# 
# DO NOT add any of these variables to the admin app:
# - SUPABASE_SERVICE_ROLE_KEY
# - DATABASE_URL
# - ZEP_API_KEY
# - Any other sensitive server credentials
#
# These should only exist in the API backend environment

# =======================================
# Build Configuration
# =======================================
# ANALYZE_BUNDLE=false
# NEXT_TELEMETRY_DISABLED=1