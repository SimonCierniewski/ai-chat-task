<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Dev configuration: Allow cleartext traffic to localhost/emulator for development -->
    <!-- IMPORTANT: Remove this configuration in production builds -->
    
    <!-- Allow cleartext to Android emulator host (10.0.2.2) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">10.0.2.2</domain>
    </domain-config>
    
    <!-- Allow cleartext to physical device localhost testing -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
    </domain-config>
    
    <!-- Allow cleartext to local network IPs for device testing -->
    <!-- Update with your actual development machine IP if needed -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">192.168.1.0/24</domain>
    </domain-config>
    
    <!-- Default configuration for all other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>