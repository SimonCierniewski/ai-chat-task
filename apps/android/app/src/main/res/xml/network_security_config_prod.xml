<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Production configuration: Secure by default -->
    <!-- Only HTTPS traffic is allowed, no cleartext -->
    
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system CAs only in production -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Optional: Pin certificates for your API domain for extra security -->
    <!-- Uncomment and configure when you have your production certificates -->
